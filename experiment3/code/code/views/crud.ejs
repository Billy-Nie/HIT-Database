    <form class="am-form am-g am-g-fixed">
        <button id="show" class="am-btn am-btn-default">员工展示</button>

        <div class="am-form-group">
            <table class="am-table">
                <thead>
                    <tr>
                        <th>ENAME</th>
                        <th>ESSN</th>
                        <th>ADDRESS</th>
                        <th>SALARY</th>
                    </tr>
                </thead>
                <tbody id="showe">
                </tbody>
            </table>
        </div>

        <fieldset>
            <legend>1. 添加一条员工信息</legend>

            <div class="am-form-group">
                <label for="p-1-1">员工姓名</label>
                <input type="text" id="p-1-1" placeholder="输入姓名(如： 库克)">
            </div>

            <div class="am-form-group">
                <label for="p-1-2">身份证号码</label>
                <input type="text" id="p-1-2" placeholder="输入身份证号码">
            </div>

            <div class="am-form-group">
                <label for="p-1-3">地址</label>
                <input type="text" id="p-1-3" placeholder="输入地址">
            </div>

            <div class="am-form-group">
                <label for="p-1-4">薪水</label>
                <input type="text" id="p-1-4" placeholder="输入薪水">
            </div>

            <p><button id="s-1" class="am-btn am-btn-default">提交</button></p>

        </fieldset>
    </form>


    <form class="am-form am-g am-g-fixed">
        <fieldset>
            <legend>2. 更新一条员工信息</legend>

            <div class="am-form-group">
                <label for="p-2-1">身份证号码</label>
                <input type="text" id="p-2-1" placeholder="输入身份证号码">
            </div>

            <div class="am-form-group">
                <label for="p-2-2">薪水</label>
                <input type="text" id="p-2-2" placeholder="输入薪水">
            </div>

            <p><button id="s-2" class="am-btn am-btn-default">提交</button></p>

        </fieldset>
    </form>

    <form class="am-form am-g am-g-fixed">
        <fieldset>
            <legend>3. 删除一条员工信息</legend>

            <div class="am-form-group">
                <label for="p-3-1">身份证号码</label>
                <input type="text" id="p-3-1" placeholder="输入身份证号码">
            </div>

            <p><button id="s-3" class="am-btn am-btn-default">提交</button></p>

        </fieldset>
    </form>
