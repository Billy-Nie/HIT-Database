    <script>
        (function() {
            // 1
            $("#s-1").click(function(e) {
                e.preventDefault();
                $.ajax({
                    method: "post",
                    url: 'curd1',
                    data: {
                        ename: $("#p-1-1").val(),
                        essn: $("#p-1-2").val(),
                        address: $('#p-1-3').val(),
                        salary: $('#p-1-4').val()
                    },
                    success: function(data) {
                        alert('添加成功');
                    },
                    error: function() {
                        alert('添加失败');
                    }
                });
            });

            //
            $('#show').click(function(e) {
                e.preventDefault();
                $.ajax({
                    method: "get",
                    url: 'get',
                    data: "",
                    success: function(data) {
                        var str = "";
                        for (var i = 0, l = data.length; i < l; i++) {
                            console.log(e);
                            str += "<tr><td>";
                            str += data[i].ENAME;
                            str += "</td><td>"
                            str += data[i].ESSN;
                            str += "</td><td>"
                            str += data[i].ADDRESS;
                            str += "</td><td>"
                            str += data[i].SALARY;
                            str += "</td></tr>"
                        }
                        $('#showe').html(str);
                    },
                    error: function() {
                        alert('添加失败');
                    }
                });
            });

            //

            $("#s-2").click(function(e) {
                e.preventDefault();
                $.ajax({
                    method: "post",
                    url: 'curd2',
                    data: {
                        essn: $("#p-2-1").val(),
                        salary: $("#p-2-2").val()
                    },
                    success: function(data) {
                        alert('更新成功');
                    },
                    error: function() {
                        alert('更新失败');
                    }
                });
            });

            //
            $("#s-3").click(function(e) {
                e.preventDefault();
                $.ajax({
                    method: "post",
                    url: 'crud3',
                    data: {
                        essn: $("#p-3-1").val()
                    },
                    success: function(data) {
                        alert('删除成功');
                    },
                    error: function() {
                        alert("删除失败");
                    }
                })
            })
        })();
    </script>
